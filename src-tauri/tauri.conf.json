{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "taskhomie",
  "version": "0.1.0",
  "identifier": "com.taskhomie.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "taskhomie",
        "width": 420,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      },
      {
        "label": "mini",
        "title": "taskhomie-mini",
        "url": "index.html?mini=true",
        "width": 300,
        "height": 220,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      },
      {
        "label": "spotlight",
        "title": "taskhomie-spotlight",
        "url": "index.html?spotlight=true",
        "width": 800,
        "height": 560,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      },
      {
        "label": "border",
        "title": "taskhomie-border",
        "url": "index.html?border=true",
        "width": 1920,
        "height": 1080,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
